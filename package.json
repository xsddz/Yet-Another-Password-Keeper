{
  "name": "yet-another-password-keeper",
  "version": "0.0.1",
  "description": "an password keeper app based on electron.",
  "main": "electron.js",
  "scripts": {
    "postinstall": "electron-builder install-app-deps",
    "build": "webpack --config ./webpack.config.js",
    "start": "yarn run build && electron .",

    "postrelease:mac64": "electron-builder install-app-deps --platform darwin --arch x64",
    "pack:mac64": "yarn run postrelease:mac64 && yarn run build && electron-builder --dir --mac --x64",
    "dist:mac64": "yarn run postrelease:mac64 && yarn run build && electron-builder --mac --x64",
    
    "postrelease:win64": "electron-builder install-app-deps --platform win32 --arch x64",
    "pack:win64": "yarn run postrelease:win64 && yarn run build && electron-builder --dir --win --x64",
    "dist:win64": "yarn run postrelease:win64 && yarn run build && electron-builder --win --x64"
  },
  "build": {
    "appId": "org.dingzhihao.yet-another-password-keeper",
    "files": [
      "dist/**/*",
      "electron.js"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "win": {
      "target": [
        "portable",
        "zip"
      ]
    },
    "directories": {
      "output": "output"
    }
  },
  "keywords": [],
  "author": "xsddz",
  "license": "MIT",
  "devDependencies": {
    "@types/react": "^16.9.23",
    "@types/react-dom": "^16.9.5",
    "css-loader": "^3.4.2",
    "electron": "^8.0.2",
    "electron-builder": "^22.4.1",
    "file-loader": "^5.1.0",
    "html-webpack-plugin": "^3.2.0",
    "node-sass": "^4.13.1",
    "react": "^16.13.0",
    "react-dom": "^16.13.0",
    "sass-loader": "^8.0.2",
    "style-loader": "^1.1.3",
    "ts-loader": "^6.2.1",
    "typescript": "^3.8.3",
    "webpack": "^4.42.0",
    "webpack-cli": "^3.3.11",
    "webpack-node-externals": "^1.7.2"
  },
  "dependencies": {
    "knex": "^0.20.13",
    "sqlite3": "^4.1.1"
  }
}
