{
  "name": "electron-app-demo",
  "version": "0.0.1",
  "description": "an electron app demo.",
  "main": "electron.js",
  "scripts": {
    "build": "webpack --config ./webpack.config.js",
    "start": "npm run build && electron .",
    "pack": "electron-builder --dir --mac --win --x64",
    "dist": "electron-builder --mac --win --x64"
  },
  "build": {
    "appId": "org.dingzhihao.electron-app-demo",
    "files": [
      "**/*",
      "!**/._*",
      "!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,.gitignore,.gitattributes}",
      "!**/{package.json,package-lock.json,tsconfig.json,webpack.conf.js}",
      "!src/",
      "!output/",
      "!node_modules/*"
    ],
    "directories": {
      "output": "output"
    },
    "mac": {
      "category": "your.app.category.type",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "win": {
      "target": [
        "nsis",
        "zip"
      ]
    }
  },
  "keywords": [],
  "author": "xsddz",
  "license": "",
  "devDependencies": {
    "@types/react": "^16.9.23",
    "@types/react-dom": "^16.9.5",
    "css-loader": "^3.4.2",
    "electron": "^8.0.2",
    "electron-builder": "^22.3.6",
    "file-loader": "^5.1.0",
    "html-webpack-plugin": "^3.2.0",
    "node-sass": "^4.13.1",
    "react": "^16.13.0",
    "react-dom": "^16.13.0",
    "sass-loader": "^8.0.2",
    "style-loader": "^1.1.3",
    "ts-loader": "^6.2.1",
    "typescript": "^3.8.3",
    "webpack": "^4.42.0",
    "webpack-cli": "^3.3.11"
  }
}
